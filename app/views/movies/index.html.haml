-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", "1", ratingsInclude(rating)
  = hidden_field_tag 'sort_by', @sorted_field 
  = submit_tag 'Refresh'

%table#movies
  %thead 
    %tr
    -#this was done like this so that we can have it sort for part 2
      %th{ :class => (@highlight == "title" ? "hilite" : nil)}
        = link_to "Movie Title", movies_path(createParamsArray("title")), :id => "title_header"
      %th Rating
      %th{ :class => (@highlight == "release_date" ? "hilite" : nil)}
        = link_to "Release Date", movies_path(createParamsArray("release_date")), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
